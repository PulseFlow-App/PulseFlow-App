{
  "expo": {
    "name": "Pulse",
    "slug": "pulse",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "pulse",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.pulse.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Pulse uses the camera to scan fridge contents and log food photos.",
        "NSPhotoLibraryUsageDescription": "Pulse uses photos to log meals and fridge contents."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#050505"
      },
      "package": "app.pulse.mobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "plugins": []
  }
}
